<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".newsoftware">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#111827"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="注册码创建"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- 数量输入卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入需要创建注册码的数量"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:digits="123456789"
                            android:maxLength="1"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 截止日期卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/data"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="截止日期选择"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:backgroundTint="@android:color/white"
                        android:elevation="0dp"
                        app:cornerRadius="12dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_status_list"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="18dp"
                        app:iconTint="#111827" />

                    <TextView
                        android:id="@+id/textView_datauntil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="截止日期待选择"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 备注 + 有效期选择卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="输入备注（非必填）"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 有效期选择（下拉样式），不改变原有 RadioGroup 逻辑 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPeriodDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="软件注册有效期选择"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/periodDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:text="一年" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 多语言功能有效期选择 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPeriodLang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="多语言功能有效期选择"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/periodDropdownLang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:text="一年" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 铁路测量功能有效期选择 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPeriodRail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="铁路测量功能有效期选择"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/periodDropdownRail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:text="一年" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 样方放样功能有效期选择 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPeriodPlot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="样方放样功能有效期选择"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/periodDropdownPlot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:text="一年" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 物探放样功能有效期选择 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPeriodGeophys"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="物探放样功能有效期选择"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/periodDropdownGeophys"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:text="一年" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 底部操作卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_new"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="生成新注册码"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#111827"
                        android:elevation="0dp"
                        app:cornerRadius="14dp"
                        app:icon="@drawable/ic_software_key"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp"
                        app:iconSize="20dp"
                        app:iconTint="@android:color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
