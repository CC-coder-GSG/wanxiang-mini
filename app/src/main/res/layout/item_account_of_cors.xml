<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- 顶部：差分账号 + 激活状态标签 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#111827"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/tv_active_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="#E5E7EB" />

        <!-- 差分密码 + 操作：独立区域（轻微强调，不突兀） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F9FAFB"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- 差分密码 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="差分密码"
                        android:textSize="13sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tv_password_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="********"
                        android:textSize="14sp"
                        android:textColor="#111827" />
                </LinearLayout>

                <!-- 操作按钮：单独占一行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pwd_view"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:gravity="center"
                        android:minWidth="64dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="查看"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#111827"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pwd_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:minWidth="64dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="重置"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#111827"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pwd_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:minWidth="64dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="自定义"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#111827"
                        app:strokeWidth="0dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 账号状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="账号状态"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_account_status_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 最后激活时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="最后激活时间"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_last_active_time_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 激活状态（可选显示） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="激活状态"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_active_status_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 最后激活期限 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="最后激活期限"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_active_time_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 激活时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="激活时间"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_register_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 到期时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="到期时间"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_expire_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 类型 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_account_type_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 备注 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_remark_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

        <!-- 服务实例 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="服务实例"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_instance_id_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#111827" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>