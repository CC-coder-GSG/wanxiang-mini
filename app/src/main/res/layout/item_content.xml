<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- 主标题：批次号/关键编号（由代码填充） -->
        <TextView
            android:id="@+id/textViewBatchNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="#E5E7EB" />

        <!-- 信息区：统一字号/颜色/间距 -->
        <TextView
            android:id="@+id/textViewCreationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewExpirationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewOperatorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewRedeemableDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:singleLine="false"
            android:maxLines="5"
            android:ellipsize="none"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <TextView
            android:id="@+id/textViewSalesMan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#374151" />

        <!-- 状态：稍微强调一下 -->
        <TextView
            android:id="@+id/textViewState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <!-- 轻量操作按钮：右下角对齐 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:text="生成二维码"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="10dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_model_scan"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="16dp"
            app:iconTint="#111827" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>